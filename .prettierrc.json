{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "prettier-plugin-astro"
  ],
  "tailwindConfig": "./tailwind.config.js",
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.js",
        "*.json",
        "*.xml.js"
      ],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}